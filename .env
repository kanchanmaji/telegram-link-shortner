# Foxcode Shorter - Environment Variables
# Copy this file to .env and update the values

# Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
WEBHOOK_URL=https://your-domain.com/webhook

# Database
DATABASE_URL=sqlite:///./foxcode_shorter.db

# API Configuration
API_BASE_URL=http://localhost:8000
CUSTOM_DOMAIN=https://foxcode.tk

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=foxcode123

# Payment Configuration (Optional)
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=xxxxx
CASHFREE_CLIENT_ID=xxxxx
CASHFREE_CLIENT_SECRET=xxxxx

# Manual Payment
UPI_ID=foxcode@paytm
PAYMENT_QR_NOTE=Send payment screenshot after paying

# Application Settings
SHORTLINK_COST=10
MAX_URLS_PER_USER=1000
MAX_URL_LENGTH=2000
SHORT_CODE_LENGTH=8

# Security
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Development
DEBUG=True
LOG_LEVEL=INFO
